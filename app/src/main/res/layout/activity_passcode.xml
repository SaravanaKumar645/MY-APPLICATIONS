<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Passcode"
    >

    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/passcodeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099ff"
        app:correctInputTip="Welcome"
        app:correctStateColor="#262725"
        app:firstInputTip="Enter your 4 digit Passcode "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:normalStateColor="#151515"
        app:numberTextColor="#0B0B0B"
        app:passcodeViewType="check_passcode"
        app:wrongInputTip="Passcode doesn't match !"
        app:wrongStateColor="#F8E61212" />

</androidx.constraintlayout.widget.ConstraintLayout>